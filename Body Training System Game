    <div class="container">
        <h2>ğŸ”¥ Body Training & Combat Game ğŸ”¥</h2>
        <p>Train, fight, and grow stronger every week!</p>

        <div class="stats">
            <p>ğŸ’ª Strength: <span id="strength">10</span></p>
            <p>ğŸƒ Stamina: <span id="stamina">10</span></p>
            <p>âš¡ Agility: <span id="agility">10</span></p>
            <p>ğŸ—¡ Combat: <span id="combat">10</span></p>
            <p>ğŸ”‹ Energy: <span id="energy">100</span></p>
            <p>ğŸ“† Week: <span id="week">1</span></p>
        </div>

        <button onclick="train('strength')">ğŸ’ª Train Strength</button>
        <button onclick="train('stamina')">ğŸƒ Train Stamina</button>
        <button onclick="train('agility')">âš¡ Train Agility</button>
        <button onclick="train('combat')">ğŸ—¡ Train Combat</button>
        <button onclick="fight()">âš”ï¸ Enter Combat</button>
        <button onclick="nextWeek()">â­ï¸ Next Week</button>

        <p id="message"></p>
    </div>

    <script>
        let stats = {
            strength: 10,
            stamina: 10,
            agility: 10,
            combat: 10,
            energy: 100,
            week: 1
        };

        function updateStats() {
            document.getElementById('strength').textContent = stats.strength;
            document.getElementById('stamina').textContent = stats.stamina;
            document.getElementById('agility').textContent = stats.agility;
            document.getElementById('combat').textContent = stats.combat;
            document.getElementById('energy').textContent = stats.energy;
            document.getElementById('week').textContent = stats.week;
        }

        function train(type) {
            if (stats.energy >= 10) {
                stats[type] += Math.floor(Math.random() * 5) + 1; // Random improvement
                stats.energy -= 10;
                showMessage(`âœ… You trained ${type} and gained power!`);
            } else {
                showMessage("âŒ Not enough energy! Rest or fight.");
            }
            updateStats();
        }

        function fight() {
            let enemyPower = stats.week * 10 + Math.floor(Math.random() * 10);
            let playerPower = stats.combat + stats.strength + stats.agility;

            if (playerPower > enemyPower) {
                stats.combat += Math.floor(Math.random() * 5) + 2;
                showMessage(`ğŸ¥‡ You won the fight! Combat power increased.`);
            } else {
                showMessage("ğŸ’€ You lost! Train harder.");
            }
            stats.energy -= 20;
            updateStats();
        }

        function nextWeek() {
            stats.week++;
            stats.energy = 100;  // Restore energy every week
            stats.strength += 2; // Passive growth
            stats.stamina += 2;
            stats.agility += 2;
            stats.combat += 2;
            showMessage("ğŸ“† A new week begins! Training and battles get tougher!");
            updateStats();
        }

        function showMessage(msg) {
            document.getElementById('message').textContent = msg;
        }

        updateStats();
    </script>

